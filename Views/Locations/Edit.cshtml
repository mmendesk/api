@model MoviesApi.Models.Location
@{
    ViewData["Title"] = "Editar aluguel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Editar aluguel</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <input type="hidden" asp-for="Id" />
            <form method="post" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Movies" class="control-label"></label>
                    <input asp-for="Movies" class="form-control" />
                    <span asp-validation-for="Movies" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CpfClient" class="control-label"></label>
                    <input asp-for="CpfClient" class="form-control" />
                    <span asp-validation-for="CpfClient" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DTLocation" class="control-label"></label>
                    <input asp-for="DTLocation" class="form-control" />
                    <span asp-validation-for="DTLocation" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}


