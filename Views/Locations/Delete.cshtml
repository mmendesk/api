@model MoviesApi.Models.Location
@{
    ViewData["Title"] = "Deletar Aluguel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Entrega de Filme</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="DeleteLocation">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Movies" class="control-label"></label>
                    <input asp-for="Movies" class="form-control"  disabled/>
                    <span asp-validation-for="Movies" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CpfClient" class="control-label"></label>
                    <input asp-for="CpfClient" class="form-control" disabled/>
                    <span asp-validation-for="CpfClient" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DTLocation" class="control-label"></label>
                    <input asp-for="DTLocation" class="form-control" disabled/>
                    <span asp-validation-for="DTLocation" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Finalizar locação" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


